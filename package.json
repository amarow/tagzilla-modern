{
  "name": "scrinia-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Scrinia - A privacy-first, tag-based document management system with local AI intelligence.",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "start": "./start.sh",
    "dev:client": "npm run dev --workspace=@scrinia/client",
